extends layout

block content
  .main.container.clearfix
    .row
      .col-md-8.col-md-offset-2
        h1.display-4
          img.avatar.img-circle.hidden-xs-down(src='/images/avatar.png', alt='avatar')
          | #{name}
        h2.profile-item Emergency Contact
        | #{emergencyContact}
        span.pull-right
            button.btn.btn-xs.btn-info-outline.btn-edit(type='button') Edit
        h2.profile-item Emergency Phone Number
        | #{emergencyPhone}
        span.pull-right
            button.btn.btn-xs.btn-info-outline.btn-edit(type='button') Edit
        h2.profile-item Allergies
        | #{allergies}
        span.pull-right
            button.btn.btn-xs.btn-info-outline.btn-edit(type='button') Edit
